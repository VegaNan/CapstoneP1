@model Item

<section>
    <p>Fill out this form!</p>

    <div asp-validation-summary="All" class="errorText"></div>

    <form enctype='multipart/form-data' asp-controller="Admin" asp-action="AddItem" method="post">
        <label>Name</label><input asp-for="ItemName" /> <br />
        <label>Description</label><input asp-for="ItemDescription" /> <br />
        <label>Price</label><input asp-for="Price" /> <br />
        <label>Types</label><input asp-for="Types" placeholder="Comma Separated List"/> <br />
        <label>Rating</label><input asp-for="Rating" /> <br />
        <div class="form-group">
            <p>Upload one or more Images</p>
            <input type="file" name="files" multiple />
        </div>


        <input type="submit" value="Submit" />
    </form>

</section>